        <Label x:Name="titleLabel" Content="Pig Latin Converter" HorizontalAlignment="Left" Margin="306,58,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label x:Name="nameLabel" Content="Name:" HorizontalAlignment="Left" Margin="146,139,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label x:Name="pigLabel" Content="Pig Latin Name:" HorizontalAlignment="Left" Margin="146,191,0,0" VerticalAlignment="Top" Height="27" FontSize="15"/>
        <TextBox x:Name="nameText" HorizontalAlignment="Left" Height="23" Margin="338,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="pigText" HorizontalAlignment="Left" Height="23" Margin="338,202,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button x:Name="convertButton" Content="Convert" HorizontalAlignment="Left" Margin="353,278,0,0" VerticalAlignment="Top" Width="75" Click="convertButton_Click"/>

    </Grid>
</Window>
